{% extends "base.jinja2" %}

{% block title %}
    {{ post.title }}
{% endblock title %}

{% block permpost %}
{% autoescape true %}
      {% if post.title %}
        <div class="post-title">
            <b>{{ post.title }}</b>
        </div>
      {% endif %}
      {% if post.date %}
        <div class="post-date">
            <b>{{ post.date }}</b>
        </div>
      {% endif %}
      <hr>
      {% if post.content %}
        <div class="post-content">
            <p>{{ post.content }}</p>
        </div>
      {% endif %}
      <p>Queried {{queried_time_seconds}} seconds ago. </p>
{% endautoescape %}
{% endblock permpost %}


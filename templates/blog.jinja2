{% extends "base.jinja2" %}

{% block title %}
    blog
{% endblock title %}


{% block posts %}
{% autoescape true %}
    {% for post in posts %}
      {% if post.title %}
        <div class="post-title">
            <b>{{ post.title }}</b> 
        </div>
      {% endif %}
      {% if post.date %}
        <div class="post-date">
            <b>{{ post.date }}</b> 
        </div>
      {% endif %}
      <hr>
      {% if post.content%}
        <div class="post-content">
            <p>{{ post.content }}</p> 
        </div>
      {% endif %}
      <br>
    {% endfor %}
    <p> Queried {{after_query_seconds}} seconds ago </p>
{% endautoescape %}
{% endblock posts %}


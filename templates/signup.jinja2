{% autoescape true %}
<!DOCTYPE html>
<html>
    <head>
        <title>Sign Up</title>
        <style type="text/css">
            .label {text-align: right}
            .error {color: red}
        </style>

    </head>

    <body>
        <h2>Signup</h2>
        <form method="post">
            <table>
                <tbody><tr>
                        <td class="label">
                            Username
                        </td>
                        <td>
                            <input name="username" value="{{username}}" type="text">
                        </td>
                        <td class="error">
                            {{error_username}}
                        </td>
                    </tr>

                    <tr>
                        <td class="label">
                            Password
                        </td>
                        <td>
                            <input name="password" value="{{password}}" type="password">
                        </td>
                        <td class="error">
                            {{error_password}}
                        </td>
                    </tr>

                    <tr>
                        <td class="label">
                            Verify Password
                        </td>
                        <td>
                            <input name="verify" value="{{passverify}}" type="password">
                        </td>
                        <td class="error">
                            {{error_passverify}}
                        </td>
                    </tr>

                    <tr>
                        <td class="label">
                            Email (optional)
                        </td>
                        <td>
                            <input name="email" value="{{email}}" type="text">
                        </td>
                        <td class="error">
                            {{error_email}}
                        </td>
                    </tr>
            </tbody></table>

            <input type="submit">
        </form>

    </body>
</html>
{% endautoescape %}
